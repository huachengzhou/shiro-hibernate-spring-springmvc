<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd">
	<!-- 配置自动扫描的包 MVC配置文件只扫描与前端控制器相关的注解Class,这样既可解决重复扫描的情况 -->
	<context:component-scan base-package="com.blake.shiro.controller,shiro_hibernate.controller">
		<context:include-filter type="annotation"
			expression="org.springframework.stereotype.Controller" />
		<context:include-filter type="annotation"
			expression="org.springframework.web.bind.annotation.ControllerAdvice" />
	</context:component-scan>
	<!-- 配置视图解析器 -->
	<bean id="internalResourceViewResolver"
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/views/"></property>
		<property name="suffix" value=".jsp"></property>
	</bean>
	<!-- 设置默认方案 一般项目都会配的 相当于标配 -->
	<!-- 使用默认的Servlet来相应静态文件 一般项目都会配的 相当于标配 -->
	<mvc:annotation-driven />
	<mvc:default-servlet-handler />
	<import resource="shiro-web.xml"/>
	<!-- 统一 异常处理 -->
	<bean class="com.blake.shiro.exception.DefaultExceptionHandler" />
</beans>
